<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical">

    <Button

        android:id="@+id/order_commit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/commit_bottom_btn"
        android:text="接受需求"
        android:textColor="@color/white"
        android:textSize="20dp" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/order_commit"
        android:layout_alignParentTop="true"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView

                android:id="@+id/order_top_img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/order_topimg_high"
                android:background="@color/gongzhengtong_red" />

<ImageView
    android:layout_marginTop="30dp"
    android:layout_centerHorizontal="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@mipmap/handshake"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/order_top_img"
                android:background="#20FFFFFF">

                <ImageView
                    android:id="@+id/order_title_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="20dp"
                    android:src="@mipmap/order_titles" />

                <TextView
                    android:id="@+id/order_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="@dimen/order_bew_img_text"
                    android:layout_toRightOf="@id/order_title_img"
                    android:fontFamily="@string/blink_detection"
                    android:text="...."
                    android:textColor="@color/white"
                    android:textSize="@dimen/order_title_textsize" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/gray">

                </View>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/order_first_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/order_top_img"
                android:background="@color/white"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/order_person_img"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:src="@mipmap/order_person" />

                <TextView
                    android:id="@+id/order_person_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/order_bew_img_text"
                    android:layout_toRightOf="@id/order_person_img"
                    android:text="匿名用户"
                    android:textColor="@color/black" />

                <ImageView
                    android:id="@+id/order_person_grade_img"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="200dp"
                    android:src="@mipmap/order_person_grade" />

                <TextView
                    android:id="@+id/order_person_grade_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/order_bew_img_text"
                    android:layout_toRightOf="@id/order_person_grade_img"
                    android:text=""
                    android:textColor="@color/gongzhengtong_red" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"

                    android:layout_toRightOf="@id/order_person_grade_text"
                    android:text="分"
                    android:textColor="@color/gongzhengtong_red" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/order_second_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/order_first_layout"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/order_price_img"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_alignBottom="@+id/order_price_text"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="8dp"
                    android:src="@mipmap/order_price" />

                <TextView
                    android:id="@+id/order_price_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="1dp"
                    android:layout_toRightOf="@id/order_price_img"
                    android:text=""
                    android:textColor="@color/gongzhengtong_red"
                    android:textSize="23dp" />

                <ImageView
                    android:id="@+id/order_deadline_img"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="120dp"
                    android:src="@mipmap/order_deadline" />

                <TextView
                    android:id="@+id/order_deadline_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/order_bew_img_text"
                    android:layout_toRightOf="@id/order_deadline_img"
                    android:text="截至"
                    android:textColor="@color/gongzhengtong_red" />

                <TextView
                    android:id="@+id/order_deadline_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/order_deadline_text1"
                    android:text=""
                    android:textColor="@color/gongzhengtong_red" />

            </RelativeLayout>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="13dp"
                android:layout_marginTop="215dp"
                android:src="@mipmap/order_talk_bg" />

            <ImageView
                android:clickable="true"
                android:id="@+id/order_message_btn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="210dp"
                android:src="@mipmap/order_talk" />


            <RelativeLayout
                android:id="@+id/order_third_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_second_layout"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/order_content_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/order_content" />

                <TextView
                    android:id="@+id/order_content_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/order_bew_img_text"
                    android:layout_toRightOf="@id/order_content_img"
                    android:text="需求内容"
                    android:textColor="@color/black" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_third_layout"
                android:background="@color/white"
                android:padding="3dp">

                <TextView
                    android:id="@+id/order_content_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="39dp"
                    android:layout_marginRight="39dp"/>
            </RelativeLayout>

        </RelativeLayout>


    </ScrollView>

</RelativeLayout>