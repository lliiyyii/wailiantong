<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:background="#fff">
    <ImageView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="11dp"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@mipmap/people_smile"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="29dp"
        android:id="@+id/item_message_people"
        android:text="商家"
        android:textSize="16dp"
        android:textColor="#383838"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/item_message_people"
        android:text="说："
        android:textSize="16dp"
        android:textColor="#383838"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:id="@+id/item_message_time"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:text="2017-01-14 12:30:20"
        android:textSize="12dp"
        android:textColor="#b2b2b2"/>
    <TextView
        android:layout_marginBottom="10dp"
        android:id="@+id/item_message_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="30dp"
        android:textSize="14dp"
        android:textColor="#999"
        android:text="你好！第一次聊天请多多指教第一次聊天请多多指教第一次聊天请多多指教第一次聊天请多多指教第一次聊天"/>
</RelativeLayout>
</LinearLayout>
