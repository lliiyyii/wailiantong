<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/gongzhengtong_red">

        <ImageView
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/money"/>

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/gongzhengtong_red">

        <android.support.design.widget.TabLayout
            android:id="@+id/myorder_type_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/gongzhengtong_red"
            app:tabContentStart="12dp"
            app:tabIndicatorColor="@color/gongzhengtong_red"

            app:tabSelectedTextColor="@color/white"
            app:tabTextColor="#f9cccc">

            <android.support.design.widget.TabItem
                android:id="@+id/myorder_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部订单" />


            <android.support.design.widget.TabItem
                android:id="@+id/myorder_submitted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已发订单" />

            <android.support.design.widget.TabItem
                android:id="@+id/myorder_accepted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已接订单" />


        </android.support.design.widget.TabLayout>


    </RelativeLayout>


    <com.example.wailiantong.View.RefreshLayout
        android:id="@+id/recyclerView_refresh_myorder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/myorder_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>
    </com.example.wailiantong.View.RefreshLayout>


</LinearLayout>