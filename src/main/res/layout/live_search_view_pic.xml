<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="@color/gongzhengtong_red">

        <ImageView
            android:id="@+id/live_viewdetail_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="33dp"
            android:clickable="true"
            android:src="@mipmap/white_back_icon" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="33dp"
            android:text="图片详情"
            android:textColor="#fff"
            android:textSize="18dp" />

    </RelativeLayout>

    <ImageView

        android:id="@+id/live_view_pic1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp" />

    <ImageView
        android:id="@+id/live_view_pic2"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_below="@id/live_view_pic1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/live_view_commit"
        android:layout_width="295dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/camera_btn_background"
        android:text="确定"
        android:textColor="#fff"
        android:textSize="18dp" />

</RelativeLayout>