<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.wailiantong.CameraView.CameraSurfaceViewCopy
        android:id="@+id/continue_cameraSurfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.example.wailiantong.CameraView.CameraTopRectView
        android:id="@+id/continue_rectOnCamera"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/continue_camera_side"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="请拍正面"
            android:textColor="@color/gongzhengtong_red"
            android:textSize="30dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_alignParentBottom="true"
            android:background="#2b2b2b">

            <ImageView
                android:id="@+id/continue_takePic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/zsy_camera_btn" />

            <ImageView
                android:id="@+id/continue_camera_viewall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/zsy_camera_viewpic" />

            <TextView
                android:id="@+id/continue_camera_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="27dp"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="11dp" />

            <ImageView
                android:id="@+id/continue_camera_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@mipmap/zsy_camera_cancel" />
        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>