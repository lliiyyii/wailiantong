<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/zsy_login_background"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/active_result_id_layout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/edit_unseleted"
        android:visibility="gone">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/gongzhengtong_red"
            android:src="@mipmap/active_idcard" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="40dp"
            android:text="姓名："
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/active_viewid_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="40dp"
            android:text="张汤嬿"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="62dp"
            android:layout_marginTop="80dp"
            android:text="ID    ："
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/active_viewid_id"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/active_viewid_name"
            android:layout_marginTop="80dp"
            android:text="130529199610054912"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/active_result_business_layout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/edit_unseleted"
        android:visibility="gone">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"

            android:src="@mipmap/active_business" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="40dp"
            android:text="法人："
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/active_viewbusiness_name"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="40dp"
            android:text="张汤嬿"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="110dp"
            android:text="公司："
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/active_viewbusiness_id"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/active_viewbusiness_name"
            android:layout_marginTop="110dp"
            android:text="成都电子科技大学"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </RelativeLayout>

    <Button
        android:id="@+id/active_result_commit"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/commit_bottom_btn"
        android:text="若信息错误，请点此重新验证"
        android:textColor="@color/white"
        android:textSize="22dp" />

</RelativeLayout>