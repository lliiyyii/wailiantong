<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="18.5dp"
        android:background="@null">
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <ImageView
            android:id="@+id/find_pwd_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back_icon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="找回密码"
            android:textSize="18dp"
            android:textColor="@color/text_black"
            android:layout_centerInParent="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#ededed"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>




    <RelativeLayout
        android:layout_width="@dimen/login_width"
        android:layout_height="@dimen/find_pwd_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="82dp">

        <ImageView
            android:id="@+id/find_pwd_phoneicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/phone_icon" />

        <EditText
            android:id="@+id/find_pwd_phone_ed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="7.5dp"
            android:layout_toRightOf="@+id/find_pwd_phoneicon"
            android:background="@null"
            android:hint="手机号"
            android:textColorHint="@color/text_gray" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/text_gray" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/login_width"
        android:layout_height="@dimen/find_pwd_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/find_pwd_newpwd_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/pwd_icon" />

        <EditText
            android:id="@+id/find_pwd_newpwd_ed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="7.5dp"
            android:layout_toRightOf="@+id/find_pwd_newpwd_icon"
            android:background="@null"
            android:hint="新密码"
            android:inputType="textPassword"
            android:textColorHint="@color/text_gray" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/text_gray" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/login_width"
        android:layout_height="@dimen/find_pwd_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/find_pwd_enternew_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/pwd_icon" />

        <EditText
            android:id="@+id/find_pwd_enternew_ed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="7.5dp"
            android:layout_toRightOf="@+id/find_pwd_enternew_icon"
            android:background="@null"
            android:inputType="textPassword"
            android:hint="再次输入新密码"
            android:textColorHint="@color/text_gray" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/text_gray" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/login_width"
        android:layout_height="@dimen/find_pwd_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/find_pwd_code_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/code_icon" />

        <EditText
            android:id="@+id/find_pwd_code_ed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="7.5dp"
            android:layout_toRightOf="@+id/find_pwd_code_icon"
            android:background="@null"
            android:hint="验证码"
            android:textColorHint="@color/text_gray" />

        <Button
            android:id="@+id/find_pwd_getcode_btn"
            android:layout_width="90dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#d1cfcd"
            android:text="获取验证码"
            android:textColor="#fff"
            android:textSize="14dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/text_gray" />
    </RelativeLayout>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="60dp">
    <Button
        android:id="@+id/find_pwd_btn"
        android:layout_width="295dp"
        android:layout_height="40dp"
        android:background="@color/gongzhengtong_red"
        android:text="确定"
        android:textColor="#fff"
        android:textSize="18dp" />
</RelativeLayout>

</LinearLayout>
